<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="features-intro" type="textarea" default="" rows="5" cols="40"  label="FEATURES_INTRO_LABEL" description="FEATURES_INTRO_DESC" />
			<field name="features-style" type="list" default="style-light"
			  global="1"
			  label="FEATURES_STYLE_LABEL"
			  description="FEATURES_STYLE_DESC">
				<option value="style-light">LAYOUT_FEATURES_LIGHT</option>
				<option value="style-dark">LAYOUT_FEATURES_DARK</option>
			</field>
			
			<field name="align" type="list" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="0">Left</option>
				<option value="1">Right</option>
				<option value="2">Center</option>
			</field>
			
			<field name="img-features" type="media" default="" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_LABEL_DESC" ></field>
			<field name="features-link-text" type="text" size="50" default="" label="FEATURES_TEXT_LABEL" description="FEATURES_TEXT_DESC" ></field>
      <field name="features-link" type="text" size="50" default="" label="FEATURES_LINK_LABEL" description="FEATURES_LINK_DESC" ></field>

		</fieldset>
  </fields>
</form>